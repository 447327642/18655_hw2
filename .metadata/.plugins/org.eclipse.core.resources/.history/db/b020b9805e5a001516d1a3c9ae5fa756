package xml_process;

import java.io.*;
public class XML_Process {
	//take 1000 record of xml file
	public static void main(String[] args){
		try{
		BufferedReader br = new BufferedReader(new InputStreamReader (new FileInputStream("/xml/dblp2.xml")));
		PrintWriter writer = new PrintWriter("/bin/processed_dblp.xml");
		String temp;
		int count=0;
		while((temp=br.readLine())!=null){
			if (temp.startsWith("<article")){
				count++;
			}
			if(count ==4)
				break;
			writer.write(temp+"\n");
		}
		
		writer.write("\n </dblp>");
		writer.close();
		br.close();
		System.out.println("Finished processing "+ (count-1)+" records");
		
		}catch(IOException e){
			e.printStackTrace();
		}
	}

}
